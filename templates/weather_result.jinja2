<div class="std-element" id="city-name">
    {% if city %}
        {{ city }}
    {% endif %}
</div>
<div id="weatherResult" class="weather-result">
    {% if error %}
        <p>{{ error }}</p>
    {% elif weather %}
        <div class="gauge-container">
            <p class="gauge" id="temperature-gauge" data-temp="{% if weather.main.temp < 60 %}low{% elif weather.main.temp < 100 %}mid{% else %}high{% endif %}">
                {{ "%.1f"|format(weather.main.temp) }} °F
            </p>
            <p class="gauge" id="humidity-gauge" data-temp="{% if weather.main.humidity < 60 %}low{% elif weather.main.humidity < 80 %}mid{% else %}high{% endif %}">
                {{ "%.1f"|format(weather.main.humidity) }} %
            </p>
            <p class="gauge" id="wind-speed-guage" data-temp="{% if weather.wind.speed < 5.1 %}low{% elif weather.wind.speed < 100.1 %}mid{% else %}high{% endif %}">
                {{ "%.1f"|format(weather.wind.speed) }} mph
            </p>
        </div>

        <div class="item-wrapper">
            <p class="condition" id="condition">
                <span id="weather-description">
                    {{ weather.weather[0].description|capitalize }}
                </span>
                <img class="weather-icon" id="weather-icon" src="https://openweathermap.org/img/wn/{{ weather.weather[0].icon }}@2x.png" alt="Weather Icon"/>
            </p>
        </div>
    {% else %}
        <div class="gauge-container">
            <p class="gauge" id="temperature-gauge" data-temp="white">-- °F</p>
            <p class="gauge" id="humidity-gauge" data-temp="white">-- %</p>
            <p class="gauge" id="wind-speed-guage" data-temp="white">-- mph</p>
        </div>

        <div class="item-wrapper">
            <p class="condition" id="condition">
                <span id="weather-description">--</span>
                <img class="weather-icon" id="weather-icon" src="" alt="Weather Icon" style="display: none;"/>
            </p>
        </div>
    {% endif %}

    {% if error_forecast %}
        <p>{{ error_forecast }}</p>
    {% endif %}
</div>
